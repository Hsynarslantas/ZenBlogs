@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<ReporterDay.EntityLayer.Entities.Artical>

<div class="container">
    <div class="row">
        <div class="col-lg-12">

            <!-- Blog Posts Section -->
            <section id="blog-posts" class="blog-posts section">
                <div class="container">
                    <div class="row gy-4">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-6">
                                <article class="position-relative h-100">

                                    <div class="post-img position-relative overflow-hidden">
                                        <img src="@item.CoverImageUrl" class="img-fluid" alt="" style="width:600px;height:250px;">
                                        <span class="post-date">@item.CreatedDate.ToString("dd-MMM-yyyy")</span>
                                    </div>

                                    <div class="post-content d-flex flex-column">
                                        <h3 class="post-title">@item.Title</h3>

                                        <div class="meta d-flex align-items-center">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-person"></i>
                                                <span class="ps-2">@item.AppUser?.Name @item.AppUser?.Surname</span>
                                            </div>
                                            <span class="px-3 text-black-50">/</span>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-folder2"></i>
                                                <span class="ps-2">@item.Category?.CategoryName</span>
                                            </div>
                                        </div>

                                        <p>@(item.Content != null && item.Content.Length > 200 ? item.Content.Substring(0, 200) + "..." : item.Content)</p>
                                        <hr>
                                        <a href="/Artical/ArticalDetail/@item.Slug" class="readmore stretched-link">
                                            <span>Daha Fazlası</span><i class="bi bi-arrow-right"></i>
                                        </a>
                                    </div>

                                </article>
                            </div>
                        }
                    </div>
                </div>
            </section>
            <!-- /Blog Posts Section -->
            <!-- Blog Pagination Section -->
            <section id="blog-pagination" class="blog-pagination section">
                <div class="container">
                    <div class="d-flex justify-content-center">
                        @Html.PagedListPager(Model, page => Url.Action("Index", "Default", new { page }),
                                 new PagedListRenderOptions
                        {
                            Display = PagedListDisplayMode.Always,
                            MaximumPageNumbersToDisplay = 5,
                            LiElementClasses = new[] { "page-item" },
                            PageClasses = new[] { "page-link" }
                        })

                    </div>
                </div>
            </section>
            <!-- /Blog Pagination Section -->

        </div>
    </div>
</div>
