﻿
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeadDefaultComponentPartial")
<body class="single-post-page">


    @await Component.InvokeAsync("ArticalDetailNavbarComponentPartial")
    <main class="main">
        <div class="container">
            <div class="row">

                <div class="col-lg-8">


                    @await Component.InvokeAsync("ArticalDetailContentComponentPartial", new { id = ViewBag.v1 })
                    @await Component.InvokeAsync("ArticalDetailCommentComponentPartial", new { id = ViewBag.v1 })

                    

                </div>

                <div class="col-lg-4 sidebar">

                    <div class="widgets-container">


                        @await Component.InvokeAsync("ArticalDetailAboutAuthorComponentPartial")
                        @await Component.InvokeAsync("ArticalDetailRecentArticalsComponentPartial")
                        @await Component.InvokeAsync("ArticalDetailTagListComponentPartial")


                    </div>

                </div>

            </div>
        </div>

    </main>

    @await Component.InvokeAsync("_HeadDefaultFooterComponentPartial")

</body>

</html>