@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeadDefaultComponentPartial")

<body class="category-page">


    @await Component.InvokeAsync("_HeaderDefaultComponentPartial")
    <main class="main">

        <!-- Page Title -->
        <div class="page-title position-relative">
            <div class="container d-lg-flex justify-content-between align-items-center">
                <h1 class="mb-2 mb-lg-0">Category</h1>
                <nav class="breadcrumbs">
                    <ol>
                        <li><a href="index.html">Home</a></li>
                        <li class="current">Categories</li>
                    </ol>
                </nav>
            </div>
        </div><!-- End Page Title -->
        @{
            int page = Context.Request.Query["page"].Count > 0
            ? Convert.ToInt32(Context.Request.Query["page"])
            : 1;
        }
        @await Component.InvokeAsync("ArticalListDefaultComponentPartial", new { page = page })

    </main>

    @await Component.InvokeAsync("_HeadDefaultFooterComponentPartial")


</body>

</html>
